        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7",
        "composer/installers": "~1.0",
    },
    "extra": {
        "installer-paths": {
            "html/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "html/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "rm -rf wp_data/wp-config.php",
            "rm -rf wp_data/",
            "docker-compose stop"
        ]
    }
}
